<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_input_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="請輸入id ex: 10"
        app:layout_constraintEnd_toEndOf="@+id/tv_users"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_users"
        app:layout_constraintTop_toBottomOf="@+id/et_input_name" />

    <TextView
        android:id="@+id/tv_users"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="data"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_input_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:hint="請輸入name ex: Scolley"
        app:layout_constraintEnd_toEndOf="@+id/tv_users"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_users"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_insert_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Insert"
        app:layout_constraintEnd_toEndOf="@+id/bt_delete_room"
        app:layout_constraintTop_toBottomOf="@+id/bt_delete_room" />

    <Button
        android:id="@+id/bt_delete_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="@+id/bt_queue_room"
        app:layout_constraintTop_toBottomOf="@+id/bt_queue_room" />

    <Button
        android:id="@+id/bt_queue_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Queue One"
        app:layout_constraintEnd_toEndOf="@+id/bt_clear_room"
        app:layout_constraintTop_toBottomOf="@+id/bt_clear_room" />7\mj

    <Button
        android:id="@+id/bt_clear_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:text="Clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>